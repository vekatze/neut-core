import {
  this.bool,
  this.either {Right, right-unit},
  this.external,
  this.file.descriptor {descriptor},
  this.file.flag {flag},
  this.file.mode {mode},
  this.list {list},
  this.system {report-system-error, system},
  this.text {_get-content-pointer, text},
  this.unit {Unit, unit},
}

define open<r := right-unit>(path: &text, xs: list(flag), ms: list(mode)): system(descriptor) {
  pin path' = this.text.append(path, "\0");
  let actual-path-string = _get-content-pointer(path');
  let fd =
    this.external.open(
      actual-path-string,
      this.file.flag.interpret(xs),
      this.file.mode.interpret(ms),
    );
  if lt-int32(magic cast(descriptor, int32, fd), 0) {
    try _ = r;
    report-system-error()
  } else {
    try _ = r;
    Right(fd)
  }
}

define close<r := right-unit>(f: descriptor): system(unit) {
  let result = this.external.close(f);
  if eq-int(result, 0) {
    try _ = r;
    Right(Unit)
  } else {
    try _ = r;
    report-system-error()
  }
}
