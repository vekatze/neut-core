import {
  this.ansi {
    Background,
    Black,
    Blue,
    Bold,
    Color,
    Color-16,
    Color-256,
    Color-RGB,
    Cyan,
    Dull,
    Faint,
    Foreground,
    Green,
    Italic,
    Magenta,
    Normal,
    Red,
    Underline,
    Vivid,
    White,
    Yellow,
    color-ansi,
    style,
  },
  this.doc {arguments, atom-N, atom-int, doc, in-paren, join, layout},
  this.text,
  this.text.io {print-line},
  this.unit {unit},
}

inline ansi-doc(s: style): doc {
  match s {
  | Normal =>
    atom-N("\u{1b}[0m")
  | Bold =>
    atom-N("\u{1b}[1m")
  | Faint =>
    atom-N("\u{1b}[2m")
  | Italic =>
    atom-N("\u{1b}[3m")
  | Underline =>
    atom-N("\u{1b}[4m")
  | Color(color-layer, color) =>
    match color-layer {
    | Foreground =>
      match color {
      | Color-16(color-intensity, color) =>
        match color-intensity {
        | Dull =>
          match color {
          | Black =>
            atom-N("\u{1b}[30m")
          | Red =>
            atom-N("\u{1b}[31m")
          | Green =>
            atom-N("\u{1b}[32m")
          | Yellow =>
            atom-N("\u{1b}[33m")
          | Blue =>
            atom-N("\u{1b}[34m")
          | Magenta =>
            atom-N("\u{1b}[35m")
          | Cyan =>
            atom-N("\u{1b}[36m")
          | White =>
            atom-N("\u{1b}[37m")
          }
        | Vivid =>
          match color {
          | Black =>
            atom-N("\u{1b}[90m")
          | Red =>
            atom-N("\u{1b}[91m")
          | Green =>
            atom-N("\u{1b}[92m")
          | Yellow =>
            atom-N("\u{1b}[93m")
          | Blue =>
            atom-N("\u{1b}[94m")
          | Magenta =>
            atom-N("\u{1b}[95m")
          | Cyan =>
            atom-N("\u{1b}[96m")
          | White =>
            atom-N("\u{1b}[97m")
          }
        }
      | Color-256(value) =>
        join[
          atom-N("\u{1b}[38;5;"),
          atom-int(zext-int8-int(value)),
          atom-N("m"),
        ]
      | Color-RGB(r, g, b) =>
        join[
          atom-N("\u{1b}[38;2;"),
          atom-int(zext-int8-int(r)),
          atom-N(";"),
          atom-int(zext-int8-int(g)),
          atom-N(";"),
          atom-int(zext-int8-int(b)),
          atom-N("m"),
        ]
      }
    | Background =>
      match color {
      | Color-16(color-intensity, color) =>
        match color-intensity {
        | Dull =>
          match color {
          | Black =>
            atom-N("\u{1b}[40m")
          | Red =>
            atom-N("\u{1b}[41m")
          | Green =>
            atom-N("\u{1b}[42m")
          | Yellow =>
            atom-N("\u{1b}[43m")
          | Blue =>
            atom-N("\u{1b}[44m")
          | Magenta =>
            atom-N("\u{1b}[45m")
          | Cyan =>
            atom-N("\u{1b}[46m")
          | White =>
            atom-N("\u{1b}[47m")
          }
        | Vivid =>
          match color {
          | Black =>
            atom-N("\u{1b}[100m")
          | Red =>
            atom-N("\u{1b}[101m")
          | Green =>
            atom-N("\u{1b}[102m")
          | Yellow =>
            atom-N("\u{1b}[103m")
          | Blue =>
            atom-N("\u{1b}[104m")
          | Magenta =>
            atom-N("\u{1b}[105m")
          | Cyan =>
            atom-N("\u{1b}[106m")
          | White =>
            atom-N("\u{1b}[107m")
          }
        }
      | Color-256(value) =>
        join[
          atom-N("\u{1b}[48;5;"),
          atom-int(zext-int8-int(value)),
          atom-N("m"),
        ]
      | Color-RGB(r, g, b) =>
        join[
          atom-N("\u{1b}[48;2;"),
          atom-int(zext-int8-int(r)),
          atom-N(";"),
          atom-int(zext-int8-int(g)),
          atom-N(";"),
          atom-int(zext-int8-int(b)),
          atom-N("m"),
        ]
      }
    }
  }
}

define ansi-fg(c: color-ansi): doc {
  ansi-doc(Color(Foreground, Color-16(Vivid, c)))
}

define ansi-bg(c: color-ansi): doc {
  ansi-doc(Color(Background, Color-16(Vivid, c)))
}

define ansi-bold: doc {
  ansi-doc(Bold)
}

define ansi-reset: doc {
  ansi-doc(Normal)
}

define zen(): unit {
  pin tmp =
    layout(
      join[
        ansi-fg(Blue),
        ansi-bold,
        atom-N("Cons"),
        ansi-reset,
        in-paren(
          join[
            ansi-fg(Blue),
            ansi-bold,
            atom-N("Cons"),
            ansi-reset,
            arguments[
              atom-N("my-item,"),
              atom-N("sample,"),
              atom-N("yo,"),
            ],
          ],
        ),
      ],
    );
  print-line(tmp)
}
