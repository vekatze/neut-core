import {
  this.bool {bool},
  this.external {exit},
  this.text {text},
  this.text.io {print},
  this.unit {Unit, unit},
}

define panic<a>(t: &text): a {
  print(t);
  exit(1)
}

inline _assert(message: &text, check: () -> bool): unit {
  introspect build-mode {
  | release =>
    let _ = check in
    let _ = message in
    Unit
  | default =>
    if check() {
      Unit
    } else {
      panic(message)
    }
  }
}
