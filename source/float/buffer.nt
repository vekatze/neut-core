define write-float(b: &buffer, x: float, decimals: int): unit {
  let size = 64 in
  let add-newline = 0 in
  let buffer-ptr = magic alloca(int, size) in
  let len = magic external neut_core_v0_51_build_fixed_buf(buffer-ptr, size, x, decimals, add-newline) in
  if gt-int(len, 0) {
    this.buffer._write(b, buffer-ptr, len)
  } else {
    Unit
  }
}

