import {
  this.bool {bool},
  this.box,
  this.ord {Ord, ord},
  this.ordering {EQ, GT, LT},
  this.rune {to-int32},
}

define lt-rune(r1: rune, r2: rune): bool {
  let r1 = to-int32(r1);
  let r2 = to-int32(r2);
  ult-int32(r1, r2)
}

define le-rune(r1: rune, r2: rune): bool {
  let r1 = to-int32(r1);
  let r2 = to-int32(r2);
  ule-int32(r1, r2)
}

define gt-rune(r1: rune, r2: rune): bool {
  let r1 = to-int32(r1);
  let r2 = to-int32(r2);
  ugt-int32(r1, r2)
}

define ge-rune(r1: rune, r2: rune): bool {
  let r1 = to-int32(r1);
  let r2 = to-int32(r2);
  uge-int32(r1, r2)
}

inline as-ord: ord(rune) {
  Ord of {
    compare = {
      function (x, y) {
        if gt-rune(*x, *y) {
          GT
        } else-if lt-rune(*x, *y) {
          LT
        } else {
          EQ
        }
      }
    },
  }
}
