import {
  this.bool {bool},
  this.either {Right, region},
  this.file.descriptor {descriptor, stdout},
  this.system {system},
  this.text,
  this.text.io {write, write-line},
  this.unit {Unit, unit},
}

define _write-bool(k: descriptor, x: bool, r: region): system(unit) {
  if x {
    try _ = r;
    write(k, "True")
  } else {
    try _ = r;
    write(k, "False")
  }
}

inline write-bool(k: descriptor, x: bool): system(unit) {
  _write-bool(k, x, Right(Unit))
}

define _write-bool-line(k: descriptor, x: bool, r: region): system(unit) {
  if x {
    try _ = r;
    write-line(k, "True")
  } else {
    try _ = r;
    write-line(k, "False")
  }
}

inline write-bool-line(k: descriptor, x: bool): system(unit) {
  _write-bool-line(k, x, Right(Unit))
}

define print-bool(x: bool): unit {
  let _ = write-bool(stdout, x);
  Unit
}

define print-bool-line(x: bool): unit {
  let _ = write-bool-line(stdout, x);
  Unit
}
