import {
  this.bool {bool},
  this.c-ssize {C-SSize, c-ssize},
}

constant _c-size: type {
  introspect arch {
  | amd64 =>
    int64
  | arm64 =>
    int64
  }
}

data c-size {
| C-Size(_c-size)
}

inline from-c-size(x: c-size): int {
  let C-Size(x) = x in
  introspect arch {
  | amd64 =>
    x
  | arm64 =>
    x
  }
}

inline from-positive-ssize(x: c-ssize): c-size {
  let C-SSize(x) = x in
  C-Size(x)
}

inline add-c-size(x: c-size, y: c-size): c-size {
  let C-Size(x) = x in
  let C-Size(y) = y in
  introspect arch {
  | amd64 =>
    C-Size(add-int(x, y))
  | arm64 =>
    C-Size(add-int(x, y))
  }
}

inline mul-c-size(x: c-size, y: c-size): c-size {
  let C-Size(x) = x in
  let C-Size(y) = y in
  introspect arch {
  | amd64 =>
    C-Size(mul-int(x, y))
  | arm64 =>
    C-Size(mul-int(x, y))
  }
}

