define wifexited(x: int): bool {
  introspect os {
  | darwin =>
    let foo = and-int(x, 0b_0111_1111) in
    eq-int(foo, 0)
  }
}

define wifsignaled(x: int): bool {
  introspect os {
  | darwin =>
    let foo = and-int(x, 0b_0111_1111) in
    let b1 = ne-int(foo, 0b_0111_1111) in
    let b2 = ne-int(foo, 0) in
    and(b1, b2)
  }
}
