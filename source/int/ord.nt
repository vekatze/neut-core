import {
  this.bool,
  this.box,
  this.ord {Ord, ord},
  this.ordering {EQ, GT, LT},
}

inline as-ord: ord(int) {
  Ord{
    compare := {
      function (x, y) {
        if gt-int(*x, *y) {
          GT
        } else-if lt-int(*x, *y) {
          LT
        } else {
          EQ
        }
      }
    },
  }
}

inline as-ord-int8: ord(int8) {
  Ord{
    compare := {
      function (x, y) {
        if gt-int8(*x, *y) {
          GT
        } else-if lt-int8(*x, *y) {
          LT
        } else {
          EQ
        }
      }
    },
  }
}
