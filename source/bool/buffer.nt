import {
  this.bool {bool},
  this.buffer {buffer},
  this.either {rho},
  this.system {system},
  this.text,
  this.text.buffer {write, write-line},
  this.unit {unit},
}

define write-bool(k: &buffer, x: bool)[r := rho]: system(unit) {
  if x {
    try _ = r;
    write(k, "True")
  } else {
    try _ = r;
    write(k, "False")
  }
}

define write-bool-line(k: &buffer, x: bool)[r := rho]: system(unit) {
  if x {
    try _ = r;
    write-line(k, "True")
  } else {
    try _ = r;
    write-line(k, "False")
  }
}
