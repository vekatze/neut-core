define open(path-address: pointer, oflag: c-int, mode: c-int): FD.descriptor {
  introspect os {
  | darwin =>
    let d = magic external open(path-address, oflag)(mode: c-int) in
    magic cast(c-int, FD.descriptor, d)
  | linux =>
    let d = magic external open(path-address, oflag)(mode: c-int) in
    magic cast(c-int, FD.descriptor, d)
  }
}

define close(f: FD.descriptor): int {
  introspect os {
  | darwin =>
    from-c-int(magic external close(magic cast(FD.descriptor, c-int, f)))
  | linux =>
    from-c-int(magic external close(magic cast(FD.descriptor, c-int, f)))
  }
}

